@page
@model NextStepModel

<div class="row">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <form id="nextStepForm" asp-page="./NextStep" method="post">
                        <h2 class="text-center">Sign Up</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <div class="text-danger">@error.ErrorMessage</div>
                            }
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="First Name" />
                            <label asp-for="Input.FirstName">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Surname" />
                            <label asp-for="Input.LastName">Surname</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Age" type="number" class="form-control" autocomplete="on" aria-required="true" placeholder="Age" />
                            <label asp-for="Input.Age">Age</label>
                            <span asp-validation-for="Input.Age" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.DOB" type="date" class="form-control" autocomplete="on" aria-required="true" placeholder="Date of Birth" />
                            <label asp-for="Input.DOB">Date of Birth</label>
                            <span asp-validation-for="Input.DOB" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Input.Gender" class="form-select" aria-label="Gender">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <label asp-for="Input.Gender">Gender</label>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>


                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Postal Code" maxlength="10" />
                            <label asp-for="Input.PhoneNumber">Phone Number without (Country Code) </label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <button id="nextStepSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


